rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // PACK 370: PREDICTIVE LTV ENGINE + ROAS OPTIMIZATION
    // ============================================================================
    
    // User LTV Forecasts
    match /userLTVForecast/{userId} {
      // Users can read their own LTV data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Only system (Cloud Functions) can write
      allow write: if false;
    }
    
    // Geo-Level LTV Profiles
    match /geoLTVProfiles/{country} {
      // Admins and system can read
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
      
      // Only system can write
      allow write: if false;
    }
    
    // ROAS Signals (feeds back to PACK 369)
    match /roasSignals/{signalId} {
      // Admins can read
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
      
      // Only system can write
      allow write: if false;
    }
    
    // LTV Configuration (admin-controlled)
    match /ltvConfig/{configId} {
      // Admins can read
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
      
      // Only superadmins can write
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Creator LTV Profiles
    match /creatorLTVProfiles/{creatorId} {
      // Creators can read their own data
      allow read: if request.auth != null && (
        request.auth.uid == creatorId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
      
      // Only system can write
      allow write: if false;
    }
    
    // LTV Override History (audit trail)
    match /ltvOverrideHistory/{overrideId} {
      // Only admins can read
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
      
      // Only system can write
      allow write: if false;
    }
  }
}
