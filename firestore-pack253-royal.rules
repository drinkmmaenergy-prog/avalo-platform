rules_version = '2';

// PACK 253 â€” ROYAL UPGRADE FUNNEL
// Performance-based elite creator tier with strict unlock requirements
// Royal = high-demand profiles driving platform monetization

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Royal Metrics Collection - tracks performance data for Royal eligibility
    match /royal_metrics/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || // Own metrics
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      allow write: if false; // Only backend functions can write metrics
    }
    
    // Royal Status Collection - current Royal tier status
    match /royal_status/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || // Own status
        request.auth.uid in resource.data.visibleTo || // Shared visibility
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      allow write: if false; // Only backend functions manage status
    }
    
    // Royal Analytics Collection - deep revenue dashboard for Royal users
    match /royal_analytics/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Analytics generated by backend
    }
    
    // Royal Progress Collection - unlock progress tracking
    match /royal_progress/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Progress calculated by backend
    }
    
    // Royal Events Collection - exclusive Royal networking events
    match /royal_events/{eventId} {
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/royal_status/$(request.auth.uid)).data.isRoyal == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      allow create: if request.auth != null &&
        get(/databases/$(database)/documents/royal_status/$(request.auth.uid)).data.isRoyal == true &&
        request.resource.data.creatorId == request.auth.uid;
      
      allow update, delete: if request.auth != null &&
        resource.data.creatorId == request.auth.uid;
    }
    
    // Royal Chat Pricing - custom pricing settings for Royal creators
    match /royal_pricing/{userId} {
      allow read: if request.auth != null;
      
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        get(/databases/$(database)/documents/royal_status/$(userId)).data.isRoyal == true &&
        request.resource.data.chatPrice >= 100 &&
        request.resource.data.chatPrice <= 500;
    }
    
    // Royal Decay Tracking - monitors Royal status maintenance
    match /royal_decay/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Backend only
    }
  }
}