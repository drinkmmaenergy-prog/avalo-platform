rules_version = '2';

// PACK 315 - Push Notifications & Growth Funnels
// Security rules for userDevices and notifications collections

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
    
    function hasValidDeviceData() {
      let data = request.resource.data;
      return data.deviceId is string &&
             data.userId is string &&
             data.platform in ['ANDROID', 'IOS', 'WEB'] &&
             data.language is string &&
             data.country is string &&
             data.timeZone is string &&
             data.enabled is bool;
    }
    
    function hasValidNotificationSettings() {
      let notif = request.resource.data.notifications;
      return notif.pushEnabled is bool &&
             notif.emailEnabled is bool &&
             notif.categories.transactional is bool &&
             notif.categories.social is bool &&
             notif.categories.growth is bool &&
             notif.categories.marketing is bool;
    }
    
    // User Devices Collection
    // userDevices/{deviceId}
    match /userDevices/{deviceId} {
      // Only the device owner can read their own device
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Only the device owner can create/update their device
      allow create: if isOwner(request.resource.data.userId) && 
                       hasValidDeviceData();
      
      allow update: if isOwner(resource.data.userId) && 
                       hasValidDeviceData() &&
                       request.resource.data.userId == resource.data.userId; // Cannot change owner
      
      // Only admins can delete devices
      allow delete: if isAdmin();
    }
    
    // Notifications Collection
    // notifications/{notificationId}
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Only backend/admins can create notifications
      allow create: if isAdmin();
      
      // Only backend/admins can update notification status
      allow update: if isAdmin();
      
      // Only admins can delete notifications
      allow delete: if isAdmin();
    }
    
    // Extended user settings for notification preferences
    // users/{userId}/settings (partial rules - extends existing)
    match /users/{userId}/settings {
      // Allow read own settings
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow update own notification settings
      allow update: if isOwner(userId) && 
                       hasValidNotificationSettings();
    }
    
    // Notification Analytics Events
    // notificationEvents/{eventId}
    match /notificationEvents/{eventId} {
      // Only backend/admins can write
      allow create: if isAdmin();
      
      // Only admins can read/update/delete
      allow read, update, delete: if isAdmin();
    }
    
    // Growth Funnel Tracking
    // growthFunnels/{userId}/steps/{stepId}
    match /growthFunnels/{userId}/steps/{stepId} {
      // Users can read their own funnel progress
      allow read: if isOwner(userId) || isAdmin();
      
      // Only backend/admins can write funnel data
      allow create, update: if isAdmin();
      
      // Only admins can delete
      allow delete: if isAdmin();
    }
  }
}