rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * PACK 316 - Review Mode Firestore Rules
     * 
     * Security rules for review mode collections
     * - demoWallets: Demo wallet balances and transactions
     * - reviewModeEvents: Analytics events for review mode
     */
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if accessing own resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    /**
     * Demo Wallets Collection
     * 
     * Path: demoWallets/{userId}
     * 
     * Read: User can read their own demo wallet
     * Write: Backend only (no client writes)
     */
    match /demoWallets/{userId} {
      // Users can read their own demo wallet
      allow read: if isOwner(userId);
      
      // No client writes - backend only
      allow write: if false;
    }
    
    /**
     * Review Mode Events Collection
     * 
     * Path: reviewModeEvents/{eventId}
     * 
     * Read: Admin only
     * Write: Backend only
     */
    match /reviewModeEvents/{eventId} {
      // Only admins can read review mode events
      allow read: if isAdmin();
      
      // No client writes - backend only
      allow write: if false;
    }
    
    /**
     * Users Collection - Demo Profile Flag
     * 
     * Extended rules for demoProfile field
     */
    match /users/{userId} {
      // Users can read if it's their profile or if it's a public field
      allow read: if isOwner(userId) || 
                     resource.data.privacy.profileVisibility == 'public';
      
      // Users can update their own profile, but NOT the demoProfile field
      allow update: if isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['demoProfile']);
      
      // Admins can update demoProfile field
      allow update: if isAdmin() && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['demoProfile', 'updatedAt']);
    }
  }
}