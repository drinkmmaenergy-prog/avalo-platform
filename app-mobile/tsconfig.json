{
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app",
    "lib",
    "contexts",
    "components",
    "services",
    "config",
    "types",
    "hooks",
    "utils",
    "i18n",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
