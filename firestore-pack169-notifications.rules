rules_version = '2';

// PACK 169 - Notification & Reminder System
// Ethical notification management with anti-addiction safeguards
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Notification Settings - per user
    match /notification_settings/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User Notifications - personal inbox
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                       request.auth.uid == resource.data.userId &&
                       // Users can only update read status and archived
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['read', 'archived', 'readAt']);
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.userId;
    }
    
    // Notification Templates - system managed
    match /notification_templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side
    }
    
    // Reminder Rules - per user
    match /reminder_rules/{ruleId} {
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && 
                       request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.userId;
    }
    
    // Notification Logs - admin only
    match /notification_logs/{logId} {
      allow read: if false; // Admin console only
      allow write: if false; // Server-side only
    }
    
    // Notification Digests - per user
    match /notification_digests/{digestId} {
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      allow write: if false; // Server-side only
    }
  }
}