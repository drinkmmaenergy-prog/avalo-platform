rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.roles.hasAny([role]);
    }
    
    function isAdmin() {
      return hasRole('admin') || hasRole('super_admin');
    }
    
    function isModerator() {
      return hasRole('moderator') || isAdmin();
    }
    
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    function isValidVideoSize() {
      return request.resource.size < 100 * 1024 * 1024; // 100MB
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidVideoType() {
      return request.resource.contentType.matches('video/.*');
    }
    
    function isValidAudioType() {
      return request.resource.contentType.matches('audio/.*');
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidImageType() && 
                      isValidImageSize();
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // User verification documents (KYC)
    match /users/{userId}/verification/{fileName} {
      allow read: if isOwner(userId) || isAdmin() || isModerator();
      allow write: if isAuthenticated() && isOwner(userId);
      allow delete: if isAdmin();
    }
    
    // Post media (images, videos)
    match /posts/{postId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isValidImageType() && isValidImageSize()) || 
                      (isValidVideoType() && isValidVideoSize());
      allow delete: if isAdmin() || isModerator();
    }
    
    // Chat media
    match /chats/{chatId}/{fileName} {
      allow read: if isAuthenticated() && 
                     request.auth.uid in firestore.get(/databases/(default)/documents/chats/$(chatId)).data.participants;
      allow write: if isAuthenticated() && 
                      request.auth.uid in firestore.get(/databases/(default)/documents/chats/$(chatId)).data.participants &&
                      ((isValidImageType() && isValidImageSize()) || 
                       (isValidVideoType() && isValidVideoSize()) ||
                       (isValidAudioType() && request.resource.size < 5 * 1024 * 1024));
      allow delete: if isAdmin() || isModerator();
    }
    
    // Creator shop items
    match /shops/{shopId}/items/{itemId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      ((isValidImageType() && isValidImageSize()) || 
                       (isValidVideoType() && isValidVideoSize()));
      allow delete: if isAdmin();
    }
    
    // Live room thumbnails
    match /rooms/{roomId}/thumbnails/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      isValidImageType() && 
                      isValidImageSize();
      allow delete: if isAdmin();
    }
    
    // AI companion avatars (admin only)
    match /ai-companions/{companionId}/{fileName} {
      allow read: if true; // Public read
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Temp uploads (24 hour expiry)
    match /temp/{userId}/{fileName} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId);
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // System backups (admin only)
    match /backups/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Analytics exports (admin only)
    match /analytics/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only
      allow delete: if isAdmin();
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}