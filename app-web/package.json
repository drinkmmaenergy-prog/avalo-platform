{
  "name": "avalo-web",
  "version": "1.0.0",
  "description": "Avalo Web App with full mobile feature parity",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test pnpm test:integration && pnpm test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:integration": "vitest run",
    "test:integration:watch": "vitest",
    "test:a11y": "node scripts/accessibility-test.js",
    "test:perf": "node scripts/performance-check.js",
    "playwright:install": "playwright install --with-deps"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "firebase": "10.7.1",
    "next-pwa": "5.6.0",
    "simple-peer": "9.11.1",
    "socket.io-client": "4.6.1",
    "@tanstack/react-query": "5.17.19",
    "zustand": "4.4.7",
    "date-fns": "3.0.6",
    "framer-motion": "11.0.3",
    "lucide-react": "0.316.0",
    "react-hook-form": "7.49.3",
    "zod": "3.22.4",
    "@hookform/resolvers": "3.3.4",
    "swiper": "11.0.5",
    "react-intersection-observer": "9.5.3",
    "libphonenumber-js": "1.10.56",
    "sharp": "0.33.2",
    "next-themes": "0.2.1"
  },
  "devDependencies": {
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/simple-peer": "9.11.8",
    "typescript": "5.3.3",
    "tailwindcss": "3.4.1",
    "postcss": "8.4.33",
    "autoprefixer": "10.4.17",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@playwright/test": "1.41.0",
    "vitest": "1.2.1",
    "@vitest/ui": "1.2.1",
    "lighthouse": "11.4.0",
    "chrome-launcher": "1.1.0",
    "axe-core": "4.8.4",
    "@axe-core/playwright": "4.8.4",
    "eslint-plugin-jsx-a11y": "6.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
