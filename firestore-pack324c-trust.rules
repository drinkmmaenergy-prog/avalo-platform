rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================================================
    // PACK 324C â€” CREATOR TRUST & RANKING COLLECTIONS (READ-ONLY)
    // ========================================================================
    
    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true);
    }
    
    // Helper: Check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Creator Trust Scores Collection
    // Creators can read their own trust score
    // Admins can read all trust scores
    // Only Cloud Functions can write scores
    match /creatorTrustScores/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Creator Rankings Daily Collection
    // Public read access for discovery/feed ranking
    // Only Cloud Functions can write rankings
    match /creatorRankingsDaily/{docId} {
      allow read: if true; // Public read for discovery features
      allow write: if false; // Only Cloud Functions can write
    }
  }
}