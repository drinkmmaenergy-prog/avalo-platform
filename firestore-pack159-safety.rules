rules_version = '2';

// PACK 159 â€” Safety Scoring 3.0 Firestore Rules

// Helper functions
function isAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return isAuthenticated() && request.auth.uid == userId;
}

function isAdmin() {
  return isAuthenticated() && 
    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
}

function isModerator() {
  return isAuthenticated() && 
    (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'moderator');
}

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Consent States - read by participants, write via Cloud Functions only
    match /consent_states/{conversationId} {
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      allow write: if false; // Only via Cloud Functions
    }
    
    // Safety Scores - users can only read their own, write via Cloud Functions
    match /safety_scores/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only via Cloud Functions
    }
    
    // Safety Events - users can read their own, admins can read all
    match /safety_events/{eventId} {
      allow read: if isOwner(resource.data.userId) || isModerator();
      allow write: if false; // Only via Cloud Functions
    }
    
    // Safety Interventions - users can read their own, write via Cloud Functions
    match /safety_interventions/{interventionId} {
      allow read: if isOwner(resource.data.userId) || isModerator();
      allow write: if false; // Only via Cloud Functions
    }
    
    // Safety Appeals - users can read/create their own, admins can read/update all
    match /safety_appeals/{appealId} {
      allow read: if isOwner(resource.data.userId) || isModerator();
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if isModerator(); // Only moderators can resolve
    }
    
    // Safety Feedback Cards - users can read/update their own
    match /safety_feedback_cards/{cardId} {
      allow read: if isOwner(resource.data.userId);
      allow update: if isOwner(resource.data.userId) &&
        // Users can only dismiss, not modify other fields
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['dismissed', 'dismissedAt']);
      allow write: if false; // Creation only via Cloud Functions
    }
    
    // Admin Flags - read by moderators only
    match /admin_flags/{flagId} {
      allow read: if isModerator();
      allow write: if false; // Only via Cloud Functions
    }
  }
}