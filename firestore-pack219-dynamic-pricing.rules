rules_version = '2';

// PACK 219 - Royal Dynamic Chat Pricing Evolution
// Security rules for dynamic pricing collections

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Dynamic Pricing Documents
    // Path: /dynamic_pricing/{userId}
    match /dynamic_pricing/{userId} {
      // Read: User can read their own pricing data
      allow read: if isOwner(userId) || isAdmin();
      
      // Write: Only backend functions can write
      // Users cannot directly modify pricing - must go through approved functions
      allow write: if false;
      
      // Pricing History Subcollection
      match /history/{historyId} {
        // Read: User can read their own pricing history
        allow read: if isOwner(userId) || isAdmin();
        
        // Write: Only backend functions
        allow write: if false;
      }
    }
    
    // Chemistry Marks Collection
    // Path: /chemistry_marks/{markId}
    match /chemistry_marks/{markId} {
      // Read: Sender or receiver can read
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid ||
        isAdmin()
      );
      
      // Create: User can create marks they send
      allow create: if isAuthenticated() && 
                       request.resource.data.senderId == request.auth.uid &&
                       request.resource.data.mark in ['good_vibe', 'neutral', 'no_chemistry'] &&
                       request.resource.data.receiverId != request.auth.uid; // Can't mark yourself
      
      // Update/Delete: Only backend or admin
      allow update, delete: if isAdmin();
    }
    
    // Safety Incidents Collection (referenced for eligibility)
    // Path: /safety_incidents/{incidentId}
    match /safety_incidents/{incidentId} {
      // Read: Only admins and affected user
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Write: Only backend functions and admins
      allow write: if isAdmin();
    }
    
    // User Activity Collection (referenced for eligibility)
    // Path: /user_activity/{activityId}
    match /user_activity/{activityId} {
      // Read: Only user and admins
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Create: User can log their own activity
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Update/Delete: Only backend
      allow update, delete: if false;
    }
  }
}