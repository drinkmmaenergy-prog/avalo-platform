# PACK 313 - Monitoring & Observability Configuration
# Copy to .env and configure for your environment

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Environment identifier
NODE_ENV=production
AVALO_ENV=prod  # Options: dev | staging | prod

# Application version (for error tracking context)
APP_RELEASE_VERSION=1.0.0

# ============================================================================
# ERROR TRACKING (Optional - Sentry, DataDog, etc.)
# ============================================================================

# Error tracking service DSN
# Leave empty to disable external error tracking
ERROR_TRACKING_DSN=

# Log provider
# Options: console | datadog | custom
LOG_PROVIDER=console

# ============================================================================
# ALERTING (Optional)
# ============================================================================

# Email Alerts
# Comma-separated list of email addresses
ALERT_EMAIL_TO=ops@avalo.app,finance@avalo.app
ALERT_EMAIL_FROM=alerts@avalo.app

# Slack Alerts
# Webhook URL from Slack app configuration
ALERT_SLACK_WEBHOOK=

# Generic Webhook Alerts
# Custom webhook for alerts
ALERT_WEBHOOK_URL=
ALERT_WEBHOOK_METHOD=POST
ALERT_WEBHOOK_HEADERS={"Content-Type":"application/json"}

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Health check timeout (milliseconds)
HEALTH_CHECK_TIMEOUT_MS=5000

# Maximum error reports per user per minute (mobile)
MAX_ERROR_REPORTS_PER_MINUTE=10

# ============================================================================
# EXISTING CONFIGURATION (unchanged)
# ============================================================================

# These are existing variables - DO NOT CHANGE
# Included here for reference only

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# OpenAI / AI Provider
OPENAI_API_KEY=sk-...
AI_PROVIDER_KEY=...

# Firebase (auto-configured by Firebase Admin SDK)
# No additional configuration needed