rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PACK 337a: Cross-System Integration Rules
    // Enforce server-side writes for critical integration points
    
    // Support Tickets - Read own, write server-only
    match /supportTickets/{ticketId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update: if false; // Server-only via Cloud Functions
    }
    
    // Retention Profiles - Read own, write server-only
    match /retentionProfiles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Server-only calculations
    }
    
    // Fraud Profiles - Admins only
    match /fraudProfiles/{userId} {
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow write: if false; // Server-only
    }
    
    // Wallet Transactions - Read own, write server-only
    match /walletTransactions/{txId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if false; // Server-only for integrity
    }
    
    // Wallet Audit Logs - Admin only
    match /walletAuditLogs/{logId} {
      allow read: if request.auth != null && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false; // Server-only
    }
    
    // Wallets - Read own balance, write server-only
    match /wallets/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Server-only to prevent manipulation
    }
  }
}
