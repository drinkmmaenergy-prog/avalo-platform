// PACK 77 - Safety Center & Meet-Up Check-In
// Firestore Security Rules for safety_timers and safety_events collections

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is a trusted contact
    function isTrustedContact(trustedContacts) {
      return isAuthenticated() && request.auth.uid in trustedContacts;
    }
    
    // Safety Timers Collection
    match /safety_timers/{timerId} {
      
      // Allow read if:
      // 1. User is the owner
      // 2. User is a trusted contact on this timer
      allow read: if isOwner(resource.data.userId) 
                  || isTrustedContact(resource.data.trustedContacts);
      
      // Allow create only via Cloud Functions
      // Users cannot directly create timers, must use createSafetyTimer function
      allow create: if false;
      
      // Allow update only for check-in (status change to completed_ok)
      // Only the owner can check in
      allow update: if isOwner(resource.data.userId)
                    && request.resource.data.status == 'completed_ok'
                    && resource.data.status == 'active'
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.trustedContacts == resource.data.trustedContacts
                    && request.resource.data.durationSeconds == resource.data.durationSeconds
                    && request.resource.data.createdAt == resource.data.createdAt
                    && request.resource.data.expiresAt == resource.data.expiresAt
                    && request.resource.data.note == resource.data.note;
      
      // No direct deletes - handled by Cloud Functions with TTL
      allow delete: if false;
    }
    
    // Safety Events Collection
    match /safety_events/{eventId} {
      
      // Allow read if:
      // 1. User is the owner (person who triggered event)
      // 2. User is in the trustedContactsNotified array
      allow read: if isOwner(resource.data.userId)
                  || (isAuthenticated() && request.auth.uid in resource.data.trustedContactsNotified);
      
      // No direct creates - only via Cloud Functions
      allow create: if false;
      
      // No updates allowed
      allow update: if false;
      
      // No direct deletes - handled by Cloud Functions with TTL
      allow delete: if false;
    }
  }
}