// PACK 131: Affiliate System Firestore Security Rules
// Ensures affiliates cannot access private user data
// Prevents unauthorized modifications
// Enforces strict data access controls

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // Affiliate Profiles
    // Users can read/update their own profile
    // Admins can read all and suspend
    match /affiliate_profiles/{affiliateId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.status == 'pending' &&
                      request.resource.data.violations.count == 0;
      
      allow update: if isAuthenticated() && (
        // Users can update their own profile (limited fields)
        (resource.data.userId == request.auth.uid &&
         !request.resource.data.diff(resource.data).affectedKeys()
           .hasAny(['affiliateId', 'affiliateCode', 'userId', 'status', 'violations'])) ||
        // Admins can update status and violations
        isAdmin()
      );
      
      allow delete: if isAdmin();
    }
    
    // Affiliate Referrals
    // Affiliates can only read their own aggregated data
    // Cannot see individual user info beyond userId
    // Cannot modify referrals (managed by Cloud Functions)
    match /affiliate_referrals/{referralId} {
      allow read: if isAuthenticated() && (
        resource.data.affiliateId == request.auth.uid ||
        isAdmin()
      );
      
      // Only Cloud Functions can write
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
    
    // Affiliate Payouts
    // Affiliates can read their own payout history
    // Only admins can process payouts
    match /affiliate_payouts/{payoutId} {
      allow read: if isAuthenticated() && (
        resource.data.affiliateId == request.auth.uid ||
        isAdmin()
      );
      
      // Affiliates can request payouts (via Cloud Function)
      allow create: if isAuthenticated() &&
                      request.resource.data.affiliateId == request.auth.uid &&
                      request.resource.data.status == 'pending';
      
      // Only admins can update payout status
      allow update: if isAdmin();
      
      allow delete: if isAdmin();
    }
    
    // Affiliate Analytics
    // Read-only cached analytics
    // Updated by Cloud Functions only
    match /affiliate_analytics/{analyticsId} {
      allow read: if isAuthenticated() && (
        resource.data.affiliateId == request.auth.uid ||
        isAdmin()
      );
      
      allow write: if false;
    }
    
    // Affiliate Landing Pages
    // Affiliates can manage their landing pages
    // Must be approved before going live
    match /affiliate_landing_pages/{pageId} {
      allow read: if true; // Public pages
      
      allow create: if isAuthenticated() &&
                      request.resource.data.affiliateId == request.auth.uid &&
                      request.resource.data.approved == false;
      
      allow update: if isAuthenticated() && (
        // Affiliates can update unapproved pages
        (resource.data.affiliateId == request.auth.uid &&
         resource.data.approved == false) ||
        // Admins can approve pages
        isAdmin()
      );
      
      allow delete: if isAuthenticated() && (
        resource.data.affiliateId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // Prevent affiliates from accessing user private data
    // This is enforced elsewhere but duplicated for safety
    match /users/{userId} {
      // Affiliates cannot query user data
      // Normal user permissions apply
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    match /user_profiles/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    match /conversations/{conversationId} {
      // Affiliates cannot access conversations
      allow read: if isAuthenticated() &&
                    request.auth.uid in resource.data.participants;
      allow write: if isAuthenticated() &&
                     request.auth.uid in resource.data.participants;
    }
    
    // Additional restrictions
    // Prevent affiliates from querying collections for user data
    match /{document=**} {
      // Default deny for security
      allow read, write: if false;
    }
  }
}