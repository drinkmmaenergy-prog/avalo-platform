// PACK 89: Legal & Policy Center Rules
// Security rules for legal_documents and legal_acceptance collections

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }
    
    // Legal Documents - Public read, Admin write only
    match /legal_documents/{docId} {
      // Anyone can read legal documents (even unauthenticated users need to see TOS before signup)
      allow read: if true;
      
      // Only admins can create, update, or delete legal documents
      allow create, update, delete: if isAdmin();
    }
    
    // Legal Acceptance Tracking - User can read/write only their own
    match /legal_acceptance/{userId} {
      // Users can only read their own acceptance record
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      
      // Users can only write via Cloud Function (to ensure audit logging)
      // Direct writes are blocked
      allow write: if false;
    }
    
    // Legal Acceptance Audit Log - Read-only for admins
    match /legal_acceptance_audit/{auditId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
  }
}