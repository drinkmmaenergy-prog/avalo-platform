rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================================================
    // PACK 324B â€” FRAUD DETECTION COLLECTIONS (READ-ONLY, ADMIN ACCESS ONLY)
    // ========================================================================
    
    // Helper: Check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true);
    }
    
    // Fraud Signals Collection
    // Admin read-only access for viewing fraud signals
    // Only Cloud Functions can write signals
    match /fraudSignals/{signalId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // User Risk Scores Collection
    // Admin read-only access for viewing risk assessments
    // Only Cloud Functions can write/update scores
    match /userRiskScores/{userId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
  }
}