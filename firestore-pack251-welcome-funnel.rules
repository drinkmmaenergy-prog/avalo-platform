// PACK 251: Welcome Funnel - Firestore Security Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Welcome funnel state - only user can read their own, only system can write
    match /welcome_funnels/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only backend can write
    }
    
    // Funnel conversions - analytics only, no user access
    match /funnel_conversions/{conversionId} {
      allow read: if false; // Admin only
      allow write: if false; // Only backend
    }
    
    // Featured profiles - public read for discovery
    match /featured_profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend
    }
    
    // Auto-generated likes (for tracking)
    match /likes/{likeId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.fromUserId || 
         request.auth.uid == resource.data.toUserId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.fromUserId &&
        request.resource.data.isAutoGenerated != true; // Users can't create auto-likes
      allow update, delete: if false;
    }
    
    // Welcome funnel matches
    match /matches/{matchId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants &&
        request.resource.data.isWelcomeFunnelMatch != true; // Users can't create funnel matches
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow delete: if false;
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow create, delete: if false; // Only backend
    }
  }
}