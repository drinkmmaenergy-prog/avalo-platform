rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // PACK 277 â€” WALLET & TOKEN STORE SECURITY RULES
    // ============================================================================
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'super_admin']);
    }
    
    // Wallets collection - user can only read their own wallet
    match /wallets/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false; // Only server-side writes via Cloud Functions
    }
    
    // Wallet transactions - user can only read their own transactions
    match /walletTransactions/{txId} {
      allow read: if isAuthenticated() && 
                     (isOwner(resource.data.userId) || isAdmin());
      allow write: if false; // Only server-side writes via Cloud Functions
    }
    
    // Token packs configuration - public read, admin write
    match /config/tokenPacks {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Payout requests - user can read their own requests
    match /payoutRequests/{payoutId} {
      allow read: if isAuthenticated() && 
                     (isOwner(resource.data.userId) || isAdmin());
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update: if isAdmin(); // Only admins can update payout status
      allow delete: if isAdmin();
    }
    
    // Platform revenue tracking - admin only
    match /platformRevenue/{doc} {
      allow read: if isAdmin();
      allow write: if false; // Only server-side writes
    }
    
    // KYC verifications (for payout eligibility)
    match /kycVerifications/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}